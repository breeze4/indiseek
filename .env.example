# Required
GEMINI_API_KEY=your-api-key-here

# Paths
# REPO_PATH is only needed for legacy single-repo usage (repo_id=1).
# When using multi-repo management via the dashboard, repos are cloned
# to DATA_DIR/repos/<id>/ and REPO_PATH is not required.
REPO_PATH=/path/to/vite
DATA_DIR=./data

# Models (defaults shown)
GEMINI_MODEL=gemini-2.0-flash
EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIMS=768

# Server
HOST=0.0.0.0
PORT=8000
